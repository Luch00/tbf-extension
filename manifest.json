{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "Twitch Buffering Fix",
    "version": "1.0.2",
    "manifest_version": 2,
	"author": "vixing",
    "description": "Lets you switch Twitch server to avoid buffering.",
    "icons": {
			"16": "icon16.png",
			"48": "icon48.png",
			"128": "icon128.png" },
    "browser_action": {
        "default_title": "Twitch Buffering Fix",
        "default_icon": "icon48.png"
    },
    "background": {
        "scripts": [
            "bg.js"
        ]
    },
    "permissions": [
        "notifications",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "http://*.hls.ttvnw.net/*"
    ]
}
